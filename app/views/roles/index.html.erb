<%= stylesheet_link_tag "users.css" %>

<h1 align="center" class="my-4">Roles List</h1>

<table align="center" class="shadow">
    <tr class="border-bottom">
        <th>
            Seriel No
        </th>
        <th>
            Role
        </th>
        <th>
            Description
        </th>
        <th>
            Options
        </th>
    </tr>

    <% @roles.each_with_index do |role,i| %>
        <tr>
            <div class="row">
                <td>
                    <%= i+1 %>
                </td>
                <td>
                    <%= role.title %>
                </td>
                <td>
                    <%= role.description %>
                </td>                                                          
                <td>
                    <%= link_to 'Show', role_path(role),class:"btn-primary" %>
                    <%= link_to 'Edit', edit_role_path(role),class:"btn-warning" %>
                    <%= link_to 'Delete', role_path(role), data: { turbo_method: :delete, turbo_confirm: 'Are you sure to delete the role?' },class:"btn-danger" %>
                </td>   
            </div>

        </tr>
    <% end %>
    
</table>

<div align="center" class="mt-4">
    <%= link_to 'Add Another', new_role_path,class:"btn btn-outline-success" %>
</div>