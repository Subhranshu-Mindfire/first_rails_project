<%= stylesheet_link_tag "new_user.css" %>

<div class="back-btn">
    <%= link_to '<-Back', users_path %>
</div>


<div class="bg-light">
    <div class="container">
        <div class="form-box shadow-lg">
            <%= form_for @user, html: { class: 'form-control d-flex justify-center' } do |f| %>

                <h1 class="text-dark">Registration Form</h1>
                
                <div class="d-flex input-fields">
                    <div>
                        <%= f.text_field :first_name ,placeholder:" First Name", class:"form-control"  %>
                        <% @user.errors.full_messages_for(:first_name).each do |error_message| %>
                            <p class="text-danger m-0 p-0"> *<%= error_message %></p>
                        <% end %>
                    </div>
                    <div>
                        <%= f.text_field :last_name ,placeholder:" Last Name", class:"form-control"  %>
                    </div>
                    <div>
                        <%= f.text_field :email ,placeholder:" Email", class:"form-control"  %>
                        <% @user.errors.full_messages_for(:email).each do |error_message| %>
                            <p class="text-danger m-0 p-0"> *<%= error_message %></p>
                        <% end %>
                    </div>
                    
                    <div class="mt-3">
                        <% @roles.each_with_index do |role,i| %>
                            <%= f.check_box :roles, {multiple: true}, role.id, nil %>
                            <%= f.label :roles, role.title %>
                            
                        <% end %>
                    </div>
                </div>
            <div>
                <%= f.submit "Register", class:"btn btn-outline-primary" %>
            </div>
            <% end %>
        </div>
    </div>
</div>