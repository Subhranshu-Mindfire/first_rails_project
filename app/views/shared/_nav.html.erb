<nav class="navbar navbar-light bg-light justify-content-between py-2">
  <span class="navbar-brand ms-4"><%= link_to 'Registration Portal', root_path, class:"text-decoration-none text-secondary" %></span>
  
  <div class="d-flex align-items-center">

    <% if logged_in? %>
      <span class="px-3 fs-5 ">
         Welcome, <%= current_user[:first_name] %>
      </span>
     
      <% if is_admin?(current_user) %>
        <div class="dropdown mx-2">
          <button class="btn btn-secondary dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Admin Options
          </button>
          <ul class="dropdown-menu">
            <%= link_to 'Add User + ', new_user_path, class: "dropdown-item" %>
            <li><%= link_to 'Roles', roles_path, class: "dropdown-item" %></li>
            <li><%= link_to 'Users', users_path, class: "dropdown-item"%></li>
          </ul>
        </div>
      <% end %>
     
      <div class="dropdown mx-3 me-5">
        <button class="btn btn-secondary dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          My Profile
        </button>
        <ul class="dropdown-menu">
          <li><%= link_to 'Profile', user_path(current_user), class: "dropdown-item"%></li>
          <li><%= link_to 'Edit Profile', edit_user_path(current_user), class: "dropdown-item"%></li>
          <li><%= link_to 'Logout', logout_path(current_user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure logout?' }, class: "dropdown-item" %></li>
        </ul>
      </div>
  
    <% else %>
      <%= link_to 'Sign In', login_path, class: "mx-1 btn btn-outline-primary" %>
      <%= link_to 'Sign Up', signup_path, class: "mx-1 btn btn-outline-primary" %>
    <% end %>
    
  </div>
</nav>